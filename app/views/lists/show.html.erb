<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://en.parisinfo.com/var/otcp/sites/images/node_43/node_51/node_7112/salle-de-cin%C3%A9ma-%7C-630x405-%7C-%C2%A9-fotolia-he2/12344768-1-fre-FR/Salle-de-cin%C3%A9ma-%7C-630x405-%7C-%C2%A9-Fotolia-he2.jpg)">
  <h1><%=@list.name%></h1>
   <%= link_to "Return to lists", lists_path, class:"btn btn-primary", id:"return"%>
</div>

<div class="container">
  <div class="flexbox d-flex">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product m-3">
          <div><%= image_tag(bookmark.movie.poster_url, width:100) %></div>
          <div class="card-product-infos">
            <div><%= bookmark.movie.title %></div>
            <div><%= bookmark.comment %></div>
            <div><%= link_to "delete", bookmark_path(bookmark), method: :delete  %></div>
          </div>
        </div>
        <% end %>
      </div>
    <%= link_to "new Bookmark", new_list_bookmark_path(@list), class:'btn btn-primary m-3' %>

  </div>
