<div class="container">
  <h1><%=@list.name%></h1>
</div>

<div class="container">
  <div class="flexbox d-flex">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product m-3">
          <div><%= image_tag(bookmark.movie.poster_url, width:100) %></div>
          <div class="card-product-infos">
            <div><%= bookmark.movie.title %></div>
            <div><%= bookmark.comment %></div>
            <div><%= link_to "delete", bookmark_path(bookmark), method: :delete  %></div>
          </div>
        </div>
        <% end %>
    </div>
    <%= link_to "new Bookmark", new_list_bookmark_path(@list) %>
  </div>
